<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL55Dialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/shop</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">admin</property>
        <property name="hibernate.connection.pool_size">200</property>

        <property name="show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>

        <mapping class="hibernate.shop.domain.Product"/>
        <mapping class="hibernate.shop.Order"/>
        <mapping class="hibernate.shop.domain.OrderDetail"/>
        <mapping class="hibernate.shop.domain.OrderHistory"/>
        <mapping class="hibernate.shop.domain.OrderComplaint"/>
        <mapping class="hibernate.shop.domain.Cart"/>
        <mapping class="hibernate.shop.domain.CartDetail"/>
        <mapping class="hibernate.shop.domain.User"/>
        <mapping class="hibernate.shop.domain.ProductRating"/>

    </session-factory>
</hibernate-configuration>